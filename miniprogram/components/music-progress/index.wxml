<view class="progress">
  <view class="time">{{time.start}}</view>
  <view class="control">
    <movable-area class="movable-area" scale-area="false">
      <movable-view  
        class="movable-view" 
        direction="horizontal"
        x="{{movableDistance}}"
      >
      </movable-view>
    </movable-area> 
    <progress 
      stroke-width="4" 
      backgroundColor="#969696"
      activeColor="#fff"
      percent="{{musicProgress}}"  
    />  
   </view> 
   <view class="time">{{time.end}}</view>
</view>
  